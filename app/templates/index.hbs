<form>
  {{add-photovoltaic addPhotovoltaic=(action "addPhotovoltaic")}}
</form>

<div>

  <table border="1">

    <thead>
      <tr>
        <th colspan="5">Photovoltaic Calculator</th>
      </tr>
    </thead>

    <thead>
      <tr>
        <th>Peak Power, kWp</th>
        <th>Orientation</th>
        <th>Elevation</th>
        <th>Overshading</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>

      {{#each model as |photovoltaic|}}
        <tr>
          <td>{{photovoltaic.peakPower}}</td>
          <td>{{photovoltaic.orientation}}</td>
          <td>{{photovoltaic.elevation}}</td>
          <td>{{photovoltaic.overshading}}</td>
          <td><button {{action 'deletePhotovoltaic'  photovoltaic}} class="button"> Delete </button></td>
        </tr>
      {{/each}}

      <tr>
        <td colspan="4"><b>Energy Generated by PVs </b></td>
        <td><b> {{this.totalEnergy}} W/m<sup>2</sup>K </b> </td>
      </tr>

    </tbody>

  </table>

</div>
